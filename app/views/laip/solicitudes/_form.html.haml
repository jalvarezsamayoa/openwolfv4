%h2 Información Obligatoria
= form.input :fecha_creacion, :as => :date, |
  :end_year => Date.today.year,  |
  :order => [:day, :month, :year], |
  :hint => "Fecha en que se realiza la solicitud."

= form.association :via, |
  :hint => "Forma o medio como el solicitante presenta la solicitud.", |
  :include_blank => false

= form.input :solicitante_nombre, |
  :input_html => {:size => 60, :maxsize => 254}, |
  :hint => "Nombre, siglas o sinónimo como se identifica el solicitante."

= form.input :textosolicitud, :hint => "Descripción de información solicitada"

- if @usa_solicitudes_privadas == true
  = form.input :informacion_publica, :label => 'La información contenida en esta solicitud es pública.'

= form.input :reserva_temporal, |
    :inline_label => "Requiero que esta solicitud se mantenga bajo reserva hasta el momento de haber sido completada."

.form-actions
  = buttons_create(laip_solicitudes_path) if action_name == 'new'
  = buttons_update(laip_solicitud_path(@solicitud)) if action_name == 'edit'
%h2 Información Optativa
= form.input :forma_entrega, :hint => "Forma o medio como el solicitante requiere la solicitud.", :input_html => {:size => 60}
= form.input :solicitante_identificacion, :input_html => {:size => 60, :maxsize => 254}, :hint => 'Opcional: Número de Cédula, DPI, Pasaporte, etc..'
= form.input :solicitante_direccion, :input_html => {:size => 100, :maxsize => 254}, :hint => 'Opcional: si el ciudadano require que se le envien documentos.'
= form.input :email, :input_html => {:size => 60, :maxsize => 254}, :hint => 'Opcional: si el ciudadano desea recibir notificaciones automáticas.'
= form.input :solicitante_telefonos, :input_html => {:size => 60, :maxsize => 254}, :hint => "Opcional: si el ciudadano requiere que se le notifique telefónicamente."
%h4 Información Estadistica
= form.association :departamento, :hint => "Opcional: Departamento de la república donde se realiza la solicitud."
= form.association :municipio, :hint => "Opcional: Municipio de la república donde se realiza la solicitud."
= form.association :genero, :include_blank => true, :hint => "Opcional: Género del solicitante"
= form.association :idioma, :include_blank => false, :hint => "Preferencia sociolingustica del solicitante"
= form.association :rangoedad, :include_blank => true, :hint => "Opcional: Edad del solicitante"
= form.association :clasificacion, :include_blank => true, :hint => "Opcional: Ocupación del solicitante"
= form.association :profesion, :hint => "Opcional: Profesión del solicitante"
= form.input :observaciones, :input_html => {:rows => 5}, :hint => "Observaciones pertinentes sobre solicitud."

