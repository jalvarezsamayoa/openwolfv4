.show
  %h2= Profesion.model_name.human
  #options
    = button_new(new_profesion_path)
    = button_edit(edit_profesion_path(@profesion))
    = button_delete(profesion_path(@profesion))
    = button_cancel(profesiones_path)
    %br/
  .box
    %table.table
      %colgroup.show-table-header
      %colgroup.show-table-data
      %tr
        %th= label :nombre, Profesion.human_attribute_name(:nombre)
        %td= @profesion.nombre
