- content_for :head do
  = javascript_include_tag 'mensajes', 'jquery.ui.datepicker-es.js'
.mantform
  %h2
    Editar #{Mensaje.model_name.human}
  = simple_form_for @mensaje, :url => institucion_mensajes_path(@institucion) do |form|

    = render :partial => 'form', :locals => {:form => form}
    = buttons_update(institucion_mensajes_path(@institucion))
