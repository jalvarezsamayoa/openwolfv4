.widget.widget-table
  .widget-header
    %h3
      %i.icon-th-list
      Instituciones Activas
  / /widget-header
  .widget-content
    %table.table.table-striped.table-bordered.responsive
      %thead
        %tr
          %th= Institucion.human_attribute_name(:nombre)
          %th= 'Encargado UDIP'
          %th= 'Email'
          %th= 'Telefono'
      %tbody
        - for institucion in @instituciones
          %tr
            %td= institucion.nombre
            %td= institucion.encargado_udip.nombre
            %td= institucion.encargado_udip.email
            %td= institucion.telefono
    = will_paginate @instituciones


