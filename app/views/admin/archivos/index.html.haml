#page-title.clearfix
  %h1= Archivo.model_name.human.pluralize
  = render :partial => "shared/breadcrumbs"
.widget
  #options.widget-toolbar
    = button_new(new_admin_archivo_path)
    = render :partial => 'shared/findbox', :locals => {:url => admin_archivos_path}
  .widget-content
    %table.table
      %thead
        %tr
          %th= Archivo.human_attribute_name(:nombre)
          %th= Archivo.human_attribute_name(:institucion_id)
      %tbody
        - @archivos.each do |archivo|
          %tr
            %td= link_to archivo.nombre, [:admin,archivo]
            %td= archivo.institucion.nombre
    = will_paginate @archivos