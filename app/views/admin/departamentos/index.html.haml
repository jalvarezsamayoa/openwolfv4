#page-title.clearfix
  %h1= Departamento.model_name.human.pluralize
  = render :partial => "shared/breadcrumbs"

.widget
  #options.widget-toolbar
    = button_new(new_admin_departamento_path)
    = render :partial => 'shared/findbox', :locals => {:url => admin_departamentos_path}
  .widget-content
    %table.table
      %thead
        %tr
          %th= Departamento.human_attribute_name(:nombre)
      %tbody
        - for departamento in @departamentos  do
          %tr
            %td
              = link_to departamento.nombre, admin_departamento_path(departamento)
    = will_paginate @departamentos
