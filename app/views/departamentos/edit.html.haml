#page-title.clearfix
  %h1= "Editar #{Departamento.model_name.human}"
  = render :partial => "shared/breadcrumbs"

.show.widget
  .widget-header
    %h3 Editar Departamento
  .widget-content
    = simple_form_for(@departamento, :html => {:class => 'form-horizontal'}) do |form|
      = render :partial => 'form', :locals => {:form => form}
      .form-actions
        = buttons_update(departamentos_path)
