#page-title.clearfix
  %h1= "Editar #{Institucion.model_name.human}"
  = render :partial => "shared/breadcrumbs"

.show.widget
  .widget-header
    %h3 Editar Institucion
  .widget-content
    = simple_form_for(@institucion, :html => {:class => 'form-horizontal', :multipart => true}) do |form|
      = render :partial => 'form', :locals => {:form => form}
      .form-actions
        = buttons_update(instituciones_path)