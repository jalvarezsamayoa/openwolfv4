#page-title.clearfix
  %h1= Role.model_name.human.pluralize
  = render :partial => "shared/breadcrumbs"
.widget
  #options.widget-toolbar
    = button_new(new_role_path)
    = render :partial => 'shared/findbox', :locals => {:url => roles_path}
  .widget-content
    %table.table
      %thead
        %tr
          %th= Role.human_attribute_name(:name)
      %tbody
        - @roles.each do |role|
          %tr
            %td= link_to role.name, role
    = will_paginate @roles