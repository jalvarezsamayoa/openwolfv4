#page-title.clearfix
  %h1= "Nuevo #{Role.model_name.human}"
  = render :partial => "shared/breadcrumbs"

.show.widget
  .widget-header
    %h3 Nuevo Role
  .widget-content
    = simple_form_for(@role, :html => {:class => 'form-horizontal'}) do |form|
      = render :partial => 'form', :locals => {:form => form}
      .form-actions
        = buttons_create(roles_path)